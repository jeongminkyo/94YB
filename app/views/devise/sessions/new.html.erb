<%= stylesheet_link_tag 'login' %>
<div class="container">
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> alert-dismissable fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p class="notice"><%= message %></p>
    </div>
  <% end %>
  <div class="omb_login">
    <h3 class="omb_authTitle">Login or <a href="/users/sign_up">Sign up</a></h3>

    <div class="row omb_row-sm-offset-3 omb_loginOr">
      <div class="col-xs-12 col-sm-6">
      </div>
    </div>

    <div class="row omb_row-sm-offset-3">
      <div class="col-xs-12 col-sm-6 omb_socialButtons">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'email address'%>
          </div>
          <span class="help-block"></span>
          <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password', style:'margin-top: 10px'%>
          </div>
          <div class="col-xs-12 col-sm-12" style="margin-bottom: 20px">
            <div class="col-xs-6 col-sm-6" style="margin-left: 0">
              <label class="checkbox">
                <%= f.check_box :remember_me %>Remember Me
              </label>
            </div>
            <div class="col-xs-6 col-sm-6 omb_forgotPwd">
                <%= link_to 'Forgot password?', new_password_path(resource_name), style:'color:#337ab7;'%>
            </div>
          </div>
          <button class="btn btn-md btn-primary btn-block login" type="submit">Login</button>
        <% end %>
        <div style="margin-top:30px">
          <a href="/users/auth/facebook" class="btn btn-md btn-block omb_btn-facebook">

            <span>Facebook 계정으로 로그인</span>
          </a>
          <a href="/users/auth/naver" class="btn btn-md btn-block omb_btn-naver">

            <span>Naver 계정으로 로그인</span>
          </a>
          <a href="/users/auth/google_oauth2" class="btn btn-md btn-block omb_btn-google">

            <span>Google+ 계정으로 로그인</span>
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

