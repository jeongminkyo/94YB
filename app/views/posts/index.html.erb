<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-hover no-more-tables" style="margin-top: 20px;">
  <thead>
    <tr>
      <th>제목</th>
      <th>작성자</th>
      <th>생성일</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.display_name %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
